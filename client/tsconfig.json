{
  "compilerOptions": {
    // types option has been previously configured
    "types": [
      // add node as an option
      "node",
      "react",
      "react-dom",
      "react-redux",
      "react-router",
      "react-router-redux",
      "fastclick",
      "classnames",
      "isomorphic-fetch",
      "redux-thunk",
      "lodash"
    ],
    // typeroots option has been previously configured
    "typeRoots": [
      // add path to @types
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}